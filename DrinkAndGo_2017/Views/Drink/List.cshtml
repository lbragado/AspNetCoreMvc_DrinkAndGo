@*

//Comentamos estos using ya que se agregan en _ViewImports.cshtml

@using DrinkAndGo_2017.ViewModels
@model DrinkListViewModel
*@

<div>
    <h2>
        All drinks are shown here
    </h2>
</div>

<h2>@Model.CurrentCategory</h2>


@{ 
    foreach (var drink in Model.Drinks)
    {
        <div class="cols-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="@drink.ImageThumbnailUrl" alt=""  />
                <div class="caption">
                    <h3 class="pull-right">@drink.Price.ToString("c")</h3>
                    <h3>
                        <a>@drink.Name</a>
                    </h3>
                    <p>@drink.ShortDescription</p>
                </div>
            </div>
        </div>
    }
}